<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.activity.detailactivity.DetailActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/recycler_detail"
        app:layout_constraintBottom_toTopOf="@id/btn_check_in"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toTopOf="parent"/>


    <Button
        android:layout_width="0dp"
        android:id="@+id/btn_check_in"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="wrap_content"
        android:text="Check In"
        app:layout_constraintRight_toLeftOf="@id/btn_check_out"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:layout_width="0dp"
        android:id="@+id/btn_check_out"
        android:text="Check Out"
        app:layout_constraintLeft_toRightOf="@id/btn_check_in"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>
